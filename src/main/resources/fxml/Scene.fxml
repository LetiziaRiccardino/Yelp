<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.Yelp.FXMLController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnButton" mnemonicParsing="false" onAction="#handleLoadData" text="Load Data">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <TableView fx:id="tbBusiness" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colName" minWidth="75.0" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="colStars" prefWidth="75.0" text="Stars" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
